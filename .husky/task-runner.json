{
  "tasks": [
    {
      "name": "Run csharpier",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [
        "csharpier",
        "${staged}"
      ],
      "include": [
        "**/*.cs"
      ]
    },
    {
      "name": "commit-message-linter",
      "command": "npx",
      "args": [
        "--no",
        "--",
        "commitlint",
        "--edit",
        "${args}"
      ]
    }
  ]
}