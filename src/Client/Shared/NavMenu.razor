    .muudstrap-navbar .mud-button{
        text-transform: none;
    }
    .muudstrap-navbar .mud-expand-panel-header{
        padding:0px;
        width: 100%;
        height: 100%;
        flex:none;
    }

    .logo-style {
        height: 64px;
