@page "/Error/{Subject}"

<MudCard Class="d-block">
    <div class="card-centered-text">
        <h1>Uh-oh! Something went wrong.</h1>
        <img src="Assets/Img/404.jpg" alt="banner" width="30%"/>
        <p>Your requested page is not here meow.</p>
        <p>Maybe you ate it or it ran away.</p>
        <p>Requested item: @Subject</p>
        <p><a href="/" class="btn btn-primary btn-lg">Go back home</a></p>
    </div>
</MudCard>

@code {
    [Parameter]
    public string Subject { get; set; }
}
